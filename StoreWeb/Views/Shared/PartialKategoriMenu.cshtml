@model List<CoreLayer.Entities.KimeGore>
<div id="nav">
    @foreach (var item in Model)
    {
        <div class="kategori" id="@item.Id" href="" onmouseover="goster();">
            <a href="/Urun/Urunler?KimeGore=@item.Id"> @item.kimeGore</a>
        </div>
    }
</div>
<style>
    #nav{
        width:100%;
        height:80px;
        margin-top:50px;
    }
    #nav div{
        float:left;
    }
    .kategori{
        height:60px;
        width:20%;
        background-color:darkorange;
        color:whitesmoke;
        font-size:30px;
        font-weight:bold;
        text-align:center;
        padding-top:5px;
        margin-top:50px;
        margin-left:20px;
        transition:all 0.5s 0.5s ease-in-out;
    }
    .kategori:hover{
        transform:scale(1.05);
    }
    a{
        color:whitesmoke;
    }
    a:hover{
        color:whitesmoke;
    }
</style>