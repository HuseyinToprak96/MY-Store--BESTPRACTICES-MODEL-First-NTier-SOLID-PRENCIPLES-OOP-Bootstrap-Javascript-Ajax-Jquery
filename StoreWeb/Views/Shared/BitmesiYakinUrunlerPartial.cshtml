@model List<CoreLayer.Entities.Urun>
    
<h2>BİTMESİ YAKIN ÜRÜNLER</h2>
<div id="azKalanlar">
    @foreach (var item in Model)
    {
        <div id="azKalanUrun_@item.Id" class="azKalan">
            <img src="@item.Resim" height="150" width="150" />
        <div class="bilgi">
            <a href="/Urun/Detay/id=@item.Id" class="urun"> @item.UrunAdi</a><br /><div class="ucret"> @item.Ucret TL</div>
        </div>
    </div>
}
</div>
<style>
    #azKalanlar{
        margin-top:50px;
        width:100%;
    }
    #azKalanlar div{
        float:left;
        width:25%;
    }
</style>