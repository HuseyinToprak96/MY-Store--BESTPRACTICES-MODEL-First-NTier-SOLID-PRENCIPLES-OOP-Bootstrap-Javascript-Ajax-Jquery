@model List<CoreLayer.Entities.Urun>
    
<h2>BİTMESİ YAKIN ÜRÜNLER</h2>
<div id="azKalanlar">
    @foreach (var item in Model)
    {
        <div id="azKalanUrun_@item.Id" class="azKalan">
            <img src="@item.Resim" height="150" width="150" />
        <div>
            <a href="/Urun/Detay/id=@item.Id"> @item.UrunAdi</a><div class="ucret"> @item.Ucret TL</div>
        </div>
    </div>
}
</div>
<style>
    #azKalanlar{
        margin-top:50px;
    }
</style>