@model List<CoreLayer.Entities.Urun>
   
 <h2>EN ÇOK SATILAN ÜRÜNLER</h2>
    <div id="EnCokSatanlar">
        @foreach (var item in Model)
        {
            <div id="satilanUrun_@item.Id" class="satilan">
                <img src="@item.Resim" height="150" width="150" />
                <div class="bilgi">
                    <a href="/Urun/Detay/id=@item.Id" class="urun"> @item.UrunAdi</a><br /> <div class="ucret"> @item.Ucret TL</div>
                </div>
            </div>
        }
    </div>
    <style>
        #EnCokSatanlar {
            margin-top: 50px;
            width:100%;
        }

            #EnCokSatanlar div {
                float: left;
                width:25%;
            }
    </style>